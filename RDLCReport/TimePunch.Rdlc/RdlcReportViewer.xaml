                    <ui:AppBarButton 
                                     Click="CmdRefresh_Click"
                                     Icon="Refresh"
                                     Label="{x:Static resources:ViewerRes.Refresh}"
                                     ToolTip="{x:Static resources:ViewerRes.Refresh}"
                                     IsEnabled="False"/>
                    <ui:AppBarSeparator/>
                    -->
                    <ui:AppBarButton x:Name="TBBRefresh"
                                     Click="CmdExcel_Click"
